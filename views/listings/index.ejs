<%- layout("/layouts/boilerplate.ejs") %>

    <style>
        #filters{
            display: flex;
            flex-wrap: wrap;
            align-items: center;
        }

        .filter{
            text-align: center;
            margin-right: 2rem;
            margin-top: 2rem;
            opacity:0.7;
            cursor: pointer;
            text-decoration: none;
            color:black;
        }

        .filter:hover{
            opacity:1;
        }
        
        .tax-info{
            display:none;
        }

        .filter p{
            font-size: 0.8rem;
        }

        .tax-toggle{
            border: 1px solid rgba(0, 0, 0, 0.363);
            border-radius: 1rem;
            height: 3.25rem;
            padding: 1rem;
            display: flex;
            align-items: center;
            margin-left: 2rem;
            margin-bottom: 1rem;
        }
    </style>

    <div id="filters">
        <a href="/listings/trending" class="filter">
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Trending</p>
        </a>
        

        <a href="/listings/rooms" class="filter">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
        </a>

        <a href="/listings/iconic cities" class="filter">
            <div><i class="fa-solid fa-mountain-city"></i></div>
            <p>Iconic cities</p>
        </a>

        <a href="/listings/mountains" class="filter">
            
            <div><i class="fa-solid fa-mountain"></i></div>
            <p>Mountains</p>
        </a>

        <a href="/listings/castles" class="filter">
            <div><i class="fa-brands fa-fort-awesome"></i></div>
            <p>Castles</p>
        </a>

        <a href="/listings/amazing pools" class="filter">
            <div><i class="fa-solid fa-person-swimming"></i></div>
            <p>Amazing Pools</p>
        </a>

        <a href="/listings/camping" class="filter">
            <div><i class="fa-solid fa-campground"></i></div>
            <p>Camping</p>
        </a>

        <a href="/listings/farms" class="filter">
            <div><i class="fa-solid fa-cow"></i></div>
            <p>Farms</p>
        </a>

        <a href="/listings/arctic" class="filter">
            <div><i class="fa-regular fa-snowflake"></i></div>
            <p>Arctic</p>
        </a>

        <a href="/listings/domes" class="filter">
            <div><i class="fa-solid fa-landmark-dome"></i></div>
            <p>Domes</p>
        </a>

        <a href="/listings/boats" class="filter">
            <div><i class="fa-solid fa-ship"></i></div>
            <p>Boats</p>
        </a>

        <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
              </div>
        </div>
    </div>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for(listing of allListings){ %>
            <a href="/listings/<%= listing.id %>" class="listing-link">
                <div class="card col listing-card" >
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                      <p class="card-text">
                        <b><%= listing.title %></b>
                        <br>
                        &#8377; <%= listing.price.toLocaleString("en-IN") %>/night &nbsp;&nbsp;
                        <i class="tax-info">+18% GST</i>
                      </p>
                    </div>
                </div>
            </a>
            
        <% } %>
    </div>
    
<script>
    let taxswitch = document.getElementById("flexSwitchCheckDefault");

    taxswitch.addEventListener("click",()=>{
        let tax = document.getElementsByClassName("tax-info");

        for(t of tax){
            if(t.style.display!="inline"){
                t.style.display='inline';
            }
            else{
                t.style.display="none";
            }
        }

    });
</script>

